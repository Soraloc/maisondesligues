{% extends 'core.html.twig' %}

{% block title %}Modification des vacations - MDL{% endblock %}

{% block content %}
    <h2 class="mt-5 text-center"> Liste des vacations </h2>
    <br>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 100px;"> ID </th>
                    <th scope="col"> Date et heure de d√©but </th>
                    <th scope="col"> Date et heure de fin </th>
                    <th  scope="col"> Modifier les vacations </th>
                </tr>
            </thead>
            <tbody>
                {% for vacation in vacations %}
                    <tr class="table-primary">
                        <td> {{ vacation.id }} </th>
                        <td> {{ vacation.dateheuredebut|date('d-m-Y H:i:s') }} </th>
                        <td> {{ vacation.dateheurefin|date('d-m-Y H:i:s') }} </th>
                        <td> <a href="{{ path('modifier_modificationvacation', {id: vacation.id}) }}">Modifier</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
