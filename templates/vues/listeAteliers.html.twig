{% extends "core.html.twig" %}
{% block content %}
    <h2>Liste des ateliers</h2>

    {% for atelier in ateliers %}
        <div id="info" class="p-2 d-inline-flex blockEncadreA">
            <div class="clearfix">
            {{ atelier.libelle }}<br>
            {{ atelier.nbplacesmaxi }}<br>
            {% for theme in atelier.lesThemes %}
                {{ theme.libelle }}<br>
            {% endfor %}
            {% for vacation in atelier.lesVacations %}
                {{ vacation.dateHeureDebut|date('d-m-Y') }}<br>
                {{ vacation.dateHeureFin |date('d-m-Y') }}<br>
            {% endfor %}
            </div>
            <div id="radio" class="form-check green">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">Participer</label>
            </div>
        </div>
    {% endfor %}
    <br><br>
    <button type="button" class="btn btn-success">Validation</button>
{% endblock %}